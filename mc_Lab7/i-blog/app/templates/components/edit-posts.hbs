<div class="circular positive ui icon right floated button" {{action 'editModal'}}>
  <i class="icon edit"></i>
</div>
{{#ui-modal name="editPost" class="editPost" }}
  <div class="header">
    Editing current post
  </div>
  <div class="content">
    <div class="ui form">
      <div class="field">
        <label>Post Title</label>
        {{input type="text" cols="50" rows="1" value = title placeholder="add title"}}
      </div>
      <div class="field">
        <label>Post Body</label>
        {{textarea value=body cols="50" rows="3" placeholder="add body"}}
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}